{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "types": ["node", "mocha"],
    "incremental": true,
    "pretty": true,
    "strict": true,
    "removeComments": false,
    "stripInternal": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist/",
    "deno_dist/",
    "src/**/*.deno.ts",
    "src/**/*.deno.tsx"
  ]
}
